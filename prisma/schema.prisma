// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Legal Case Management Models

model Case {
  id          String   @id @default(cuid())
  caseNumber  String   @unique
  title       String
  description String?  @db.Text
  status      CaseStatus @default(ACTIVE)
  caseType    String?
  filingDate  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  documents           Document[]
  timelineEvents      TimelineEvent[]
  notes               Note[]
  contractTemplates   ContractTemplate[]
  comparisonJobs      ContractComparisonJob[]
  generatedArtifacts  GeneratedArtifact[]
}

model Document {
  id          String   @id @default(cuid())
  name        String
  type        DocumentType
  url         String?
  content     String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  caseId      String
  case        Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

model TimelineEvent {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  eventDate   DateTime
  eventType   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  caseId      String
  case        Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

model Note {
  id          String   @id @default(cuid())
  title       String?
  content     String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  caseId      String
  case        Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

// Contract Management Models

model ContractTemplate {
  id        String   @id @default(cuid())
  userId    String
  caseId    String?
  name      String
  fileUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  case      Case?    @relation(fields: [caseId], references: [id], onDelete: SetNull)
}

model ContractComparisonJob {
  id                  String              @id @default(cuid())
  userId              String
  caseId              String?
  counterpartyFileUrl String
  counterpartyFileName String
  standardFileUrl     String
  standardFileName    String
  status              ComparisonJobStatus @default(QUEUED)
  resultJson          String?             @db.Text
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt

  // Relations
  case                Case?               @relation(fields: [caseId], references: [id], onDelete: SetNull)
}

model GeneratedArtifact {
  id              String       @id @default(cuid())
  userId          String
  caseId          String?
  type            ArtifactType
  title           String
  contentMarkdown String       @db.Text
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Relations
  case            Case?        @relation(fields: [caseId], references: [id], onDelete: SetNull)
}

model WaitlistSignup {
  id        String   @id @default(cuid())
  email     String   @unique
  source    String   @default("word-addin")
  createdAt DateTime @default(now())
}

// Enums

enum CaseStatus {
  ACTIVE
  PENDING
  CLOSED
  ARCHIVED
}

enum DocumentType {
  PLEADING
  MOTION
  DISCOVERY
  CORRESPONDENCE
  EVIDENCE
  RESEARCH
  DRAFT
  CONTRACT
  OTHER
}

enum ComparisonJobStatus {
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
}

enum ArtifactType {
  MEMO
  PDF_SUMMARY
  BRIEF_DRAFT
  REDLINE
  SOF
}
